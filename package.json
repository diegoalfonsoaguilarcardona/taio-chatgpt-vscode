{
  "name": "devmate-ai-chat",
  "displayName": "DevMate AI Chat",
  "description": "Use ChatGPT and GPT4 right inside the IDE to enhance and automate your coding with AI-powered assistance (unofficial)",
  "version": "1.1.0",
  "publisher": "diegoalfonsoaguilarcardona",
  "icon": "resources/extensionIcon.png",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/diegoalfonsoaguilarcardona/devmate"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "chatgpt",
    "openai",
    "gpt3",
    "gpt4",
    "copilot",
    "ai",
    "explain",
    "find bugs",
    "explain ",
    "refactor"
  ],
  "activationEvents": [
    "onView:devmate.chatView",
    "onCommand:devmate.ask",
    "onCommand:devmate.explain",
    "onCommand:devmate.refactor",
    "onCommand:devmate.optimize",
    "onCommand:devmate.findProblems",
    "onCommand:devmate.documentation",
    "onCommand:devmate.useSelectionAsChat",
    "onCommand:devmate.appendSelectionAsChat",
    "onCommand:devmate.addFileReferenceToChat",
    "onCommand:devmate.appendSelectionMarkdownAsChat"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devmate.ask",
        "title": "Ask DevMate AI Chat"
      },
      {
        "command": "devmate.explain",
        "title": "DevMate AI Chat: Explain selection"
      },
      {
        "command": "devmate.refactor",
        "title": "DevMate AI Chat: Refactor selection"
      },
      {
        "command": "devmate.findProblems",
        "title": "DevMate AI Chat: Find problems"
      },
      {
        "command": "devmate.optimize",
        "title": "DevMate AI Chat: Optimize selection"
      },
      {
        "command": "devmate.documentation",
        "title": "DevMate AI Chat: Write documentation"
      },
      {
        "command": "devmate.resetConversation",
        "title": "Reset DevMate AI Chat conversation"
      },
      {
        "command": "devmate.pasteChat",
        "title": "Paste DevMate AI Chat chat"
      },
      {
        "command": "devmate.useSelectionAsChat",
        "title": "Use selection as DevMate AI Chat conversation"
      },
      {
        "command": "devmate.appendSelectionAsChat",
        "title": "Append selection to DevMate AI Chat conversation"
      },
      {
        "command": "devmate.appendSelectionMarkdownAsChat",
        "title": "Append Markdown selection to DevMate AI Chat conversation"
      },      
      {
        "command": "devmate.tryAgain",
        "title": "Retry DevMate AI Chat request"
      },
      {
        "command": "devmate.addImageToChat",
        "title": "Add Image to DevMate AI Chat"
      },
      {
        "command": "devmate.addFileToChat",
        "title": "Add File Content to DevMate AI Chat"
      },
      {
        "command": "devmate.addFileReferenceToChat",
        "title": "Add File Reference to DevMate AI Chat"        
      },
      {
        "command": "devmate.addSelectedPathsAsReferences",
        "title": "Add Selected File References to Chat"
       }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "devmate.ask",
          "when": "editorTextFocus",
          "group": "devmate-menu-group@1"
        },
        {
          "command": "devmate.explain",
          "when": "editorHasSelection",
          "group": "devmate-menu-group@2"
        },
        {
          "command": "devmate.refactor",
          "when": "editorHasSelection",
          "group": "devmate-menu-group@3"
        },
        {
          "command": "devmate.findProblems",
          "when": "editorHasSelection",
          "group": "devmate-menu-group@4"
        },
        {
          "command": "devmate.optimize",
          "when": "editorHasSelection",
          "group": "devmate-menu-group@5"
        },
        {
          "command": "devmate.documentation",
          "when": "editorHasSelection",
          "group": "devmate-menu-group@6"
        },
        {
          "command": "devmate.useSelectionAsChat",
          "when": "editorHasSelection",
          "group": "devmate-menu-group@7"
        },
        {
          "command": "devmate.appendSelectionAsChat",
          "when": "editorHasSelection",
          "group": "devmate-menu-group@8"
        },
        {
          "command": "devmate.appendSelectionMarkdownAsChat",
          "when": "editorHasSelection",
          "group": "devmate-menu-group@8"
        },
        {
          "command": "devmate.addSelectedPathsAsReferences",
          "when": "editorHasSelection", "group": "devmate-menu-group@9"
        }
      ],
      "commandPalette": [
        {
          "command": "devmate.ask"
        },
        {
          "command": "devmate.explain",
          "when": "editorHasSelection"
        },
        {
          "command": "devmate.refactor",
          "when": "editorHasSelection"
        },
        {
          "command": "devmate.findProblems",
          "when": "editorHasSelection"
        },
        {
          "command": "devmate.optimize",
          "when": "editorHasSelection"
        },
        {
          "command": "devmate.documentation",
          "when": "editorHasSelection"
        },
        {
          "command": "devmate.resetConversation"
        },
        {
          "command": "devmate.pasteChat"
        },
        {
          "command": "devmate.useSelectionAsChat",
          "when": "editorHasSelection"
        },
        {
          "command": "devmate.appendSelectionAsChat",
          "when": "editorHasSelection"          
        },
        {
          "command": "devmate.appendSelectionMarkdownAsChat",
          "when": "editorHasSelection"
        },
        {
          "command": "devmate.addSelectedPathsAsReferences",
          "when": "editorHasSelection"
        }
      ],
      "explorer/context": [
        {
          "command": "devmate.addImageToChat",
          "when": "resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg || resourceExtname == .gif",
          "group": "navigation"
        },
        {
          "command": "devmate.addFileReferenceToChat",
          "when": "resourceScheme == file",
          "group": "navigation"
        },
        {
          "command": "devmate.addFileToChat",
          "when": "resourceLangId =~ /^((javascript)|(typescript)|(python)|(json)|(markdown)|(plaintext)|(cpp)|(c)|(java)|(xml)|(html)|(css)|(shellscript)|(yaml)|(toml)|(ini)|(go)|(ruby)|(php)|(rust)|(csharp)|(plaintext))$/",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devmate",
          "title": "DevMate AI Chat",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "devmate": [
        {
          "type": "webview",
          "id": "devmate.chatView",
          "name": "DevMate AI Chat"
        }
      ]
    },
    "configuration": {
      "title": "DevMate AI Chat",
      "type": "object",
      "properties": {
        "devmate.providers": {
          "type": "array",
          "description": "List of AI providers with their configurations.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the provider (e.g., OpenAI, CustomAPI)."
              },
              "apiKey": {
                "type": "string",
                "description": "API key for the provider."
              },
              "apiUrl": {
                "type": "string",
                "description": "API URL for the provider."
              },
              "chatCompletionsUrl": {
                "type": "string",
                "description": "Chat Completions API base URL for this provider (optional; overrides apiUrl when using chat completions)."
              },
              "responsesUrl": {
                "type": "string",
                "description": "Responses API base URL for this provider (optional; used when a model selects the Responses API)."
              },              
              "models": {
                "type": "array",
                "description": "List of models offered by this provider.",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of the model (e.g., gpt-3.5-turbo)."
                    },
                    "model_name": {
                      "type": "string",
                      "description": "The actual model identifier to send to the provider (e.g., gpt-4o, o4-mini)."
                    },
                    "api": {
                      "type": "string",
                      "enum": ["chatCompletions", "responses"],
                      "description": "Which API to use for this model."
                    },
                    "tools": {
                      "type": "array",
                      "description": "Optional tools configuration for providers that support tools (e.g., OpenAI Responses).",
                      "items": {
                        "type": "object",
                        "description": "Tool definition object; schema is provider-specific."
                      }
                    },                    
                    "options": {
                      "type": "object",
                      "description": "Options for the model.",
                      "additionalProperties": {
                        "type": "any",
                        "description": "Custom option key-value pairs for the model."
                      }
                    },
                    "reasoning_output_delta_path": {
                      "type": "string",
                      "description": "Dot/bracket path to the streaming reasoning delta within chat completions chunks (e.g., choices[0].delta.reasoning)."
                    }
                  },
                  "required": ["name"]
                }
              }
            },
            "required": ["name", "apiKey", "apiUrl", "models"]
          },
          "order": 1
        },
        "devmate.prompts" : {
          "type":"array",
          "description": "List of possible prompts to use",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the prompt (e.g., ChainOfThougt, Simple Engenier)."
              },
              "prompt": {
                "type": "string",
                "description": "The prompt it self"
              }
            },
            "required": ["name", "prompt"]
          },
          "order": 2
        },
        "devmate.pasteOnClick": {
          "type": "boolean",
          "default": true,
          "description": "Paste the code from a codeblock inside the response into the editor when you click on it",
          "order": 3
        },
        "devmate.promptPrefix.explain": {
          "type": "string",
          "default": "Explain what this code does: ",
          "description": "The prompt prefix used for explaining the selected code",
          "order": 4
        },
        "devmate.promptPrefix.refactor": {
          "type": "string",
          "default": "Refactor this code and explain what's changed: ",
          "description": "The prompt prefix used for refactoring the selected code",
          "order": 5
        },
        "devmate.promptPrefix.findProblems": {
          "type": "string",
          "default": "Find problems with the following code, fix them and explain what was wrong (Do not change anything else, if there are no problems say so): ",
          "description": "The prompt prefix used for finding problems in the selected code",
          "order": 6
        },
        "devmate.promptPrefix.documentation": {
          "type": "string",
          "default": "Write documentation for the following code: ",
          "description": "The prompt prefix used for writing documentation for the selected code",
          "order": 7
        },
        "devmate.promptPrefix.optimize": {
          "type": "string",
          "default": "Optimize the following code if there is anything to improve, if not say so: ",
          "description": "The prompt prefix used for optimizing the selected code",
          "order": 8
        },
        "devmate.keepConversation": {
          "type": "boolean",
          "default": true,
          "description": "Keep the conversation going by using the same conversation ID for all requests (allows follow-up questions)",
          "order": 9
        },
        "devmate.timeoutLength": {
          "type": "number",
          "default": "120",
          "description": "How long should the request wait for a response before timing out (in seconds)",
          "order": 10
        },
        "devmate.selectedInsideCodeblock": {
          "type": "boolean",
          "default": true,
          "description": "Append selected code as a codeblock (``窶義...code...``窶義) instead of plain text",
          "order": 11
        },
        "devmate.codeblockWithLanguageId": {
          "type": "boolean",
          "default": true,
          "description": "Append language id of the selected code to the codeblock (``窶義language...code...``窶義)",
          "order": 12
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "update-package-lock": "npm install --package-lock-only"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.11",
    "js-tiktoken": "^1.0.10",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "openai": "^6.0.0"
  }
}